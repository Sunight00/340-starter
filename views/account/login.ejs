<h1><%= title %></h1>
<%- messages() %>

<form class="login-form">
    <label id="email">Email:<br><input id="email-input" type="email" name="account_email" required></label><br>
    <label id="password">Password:<br><input id="password-input" type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label><br>        
    <button id="login-btn" type="submit">Login</button>
    <p>No account? <a href="/account/register">Sign up</a></p>
</form>