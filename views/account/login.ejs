<h1><%= title %></h1>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><span id="asterisk">*</span>    <%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<%- messages() %>

<form class="login-form" action="/account/login" method="post">
    <label id="email">Email:<br><input id="email-input" type="email" name="account_email" required></label><br>
    <label id="password">Password:<br><input id="password-input" type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" ><span class="tooltip">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span></label><br>        
    <button id="login-btn" type="submit">Login</button>
    <p>No account? <a href="/account/register">Sign up</a></p>
</form>