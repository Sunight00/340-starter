<h2>EDIT ACCOUNT</h2>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><span id="asterisk">*</span>    <%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<% - messages() %>

<form class="form-element" action="/account/update" method="post">
<p>All fields are required</p>
  <label>First name<br><input name="account_firstname" type="text" id="account_firstname" required value="<%= locals.account_firstname %>"></label><br>
  <label>Last name<br><input name="account_lastname" type="text" id="account_lastname" required value="<%= locals.account_lastname %>"></label><br>
  <label>Email<br><input name="account_email" type="email" id="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>"></label><br>
    <i><p>Kingly re-login to implement changes</p></i>
    <input name="account_id" type="hidden" id="account_id" value="<%= locals.account_id %>">
    <button id="register-btn" type="submit">Update</button>
    
</form>


<br>
<h4>UPDATE PASSWORD</h4>
<p>NOTE YOUR ORIGINAL PASSWORD WOULD BE CHANGED</p>
<form class="form-element" action="/account/update" method="post">
    <input name="account_i" type="hidden" id="account_i" value="<%= locals.account_i %>">
    <label>Password<br><input name="account_password" type="password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><span class="tooltip">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    </label><br>

  <button id="show-Hide">Show Password</button>
    <button id="register-bt" type="submit">Change Password</button>
</form>
<script src="/js/passUpdate.js" defer></script>