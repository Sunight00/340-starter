<h2>EDIT ACCOUNT</h2>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><span id="asterisk">*</span>    <%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<% - messages() %>
<form class="form-element" action="/account/update" method="post">
  <p>All fields are required</p>

  <label>First name<br>
    <input name="account_firstname" type="text" id="account_firstname" required value="<%= account_firstname %>">
  </label><br>

  <label>Last name<br>
    <input name="account_lastname" type="text" id="account_lastname" required value="<%= account_lastname %>">
  </label><br>

  <label>Email<br>
    <input name="account_email" type="email" id="account_email" required placeholder="Enter a valid email address" value="<%= account_email %>">
  </label><br>

 

  <i><p>Kindly re-login to implement changes</p></i>

  <input name="account_id" type="hidden" id="account_id" value="<%= account_id %>">
  <button id="register-btn" type="submit">Update</button>
</form>

